@@include('./partials/head/_head.html')
  %body
    @@include('./partials/header/_header__auth.html')
    .container
      .sidebar-content-wrapper
        .sidebar-left
          %ul.sidebar-nav
            %li.sidebar-nav__item.__active
              %a.sidebar-nav__link{href: "#"}
                Companies
        .content-wrapper
          .row
              .col-lg-9.col-md-12
                %h1 Create New Company
                .box-panel
                  %form
                    %h3 Setup company admin
                    %p Lorem ipsum dolor sit amet, consectetur adipiscing elit. Vivamus auctor lobortis purus, vestibulum congue lacus. Lorem ipsum dolor sit amet, consectetur adipiscing elit. Vivamus auctor lobortis purus, vestibulum congue lacus.
                    %hr
                    .input-grp
                      .row
                        .col-md-6
                          %label.input-grp__lbl First Name
                          %input.input-control.__text{type: "text", placeholder: "E.g. John"}
                        .col-md-6
                          %label.input-grp__lbl Last Name
                          %input.input-control.__text{type: "text", placeholder: "E.g. Johnson"}
                    .input-grp
                        .row
                          .col-md-6
                            %label.input-grp__lbl Email
                            %input.input-control.__text{type: "text", placeholder: "Email"}
                          .col-md-3
                            %label.input-grp__lbl Position
                            %input.input-control.__text{type: "text", placeholder: "E.g Manager"}
                          .col-md-3
                            %label.input-grp__lbl User Role
                            %select.select-control{}
                              %option Choose..
                              %option Admin
                              %option User
                    .input-grp.input-grp__submit
                      %button.btn.btn-secondary{for: "group-2", href: "#"} Back
                      %button.btn.btn-primary{for: "group-2"} Save
    @@include('./partials/footer/_footer.html')
